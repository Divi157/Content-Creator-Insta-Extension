{
  "name": "FollowAssist",
  "description": "An Instagram extension to assist users in following along with reels or video posts.",
  "version": "2.0.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": ["followAssist.js"],
      "css": [ "style.css" ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.png"],
      "matches": ["https://www.instagram.com/*"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
